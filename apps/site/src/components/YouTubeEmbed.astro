---
interface Props {
  id: string;
  title?: string;
}

const { id, title = 'YouTube video' } = Astro.props;
const src = `https://www.youtube-nocookie.com/embed/${id}`;
---

<div class="youtube-embed">
  <iframe
    src={src}
    title={title}
    loading="lazy"
    allowfullscreen
    class="radius-lg"
  ></iframe>
</div>

<style>
  .youtube-embed {
    aspect-ratio: 16 / 9;
    width: 100%;
  }

  .youtube-embed iframe {
    width: 100%;
    height: 100%;
    border: 0;
  }
</style>

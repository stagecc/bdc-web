---
interface Props {
  quote: string;
  attribution: string;
}

const { quote, attribution } = Astro.props;
---

<div class="usa-card border border-base-lighter testimonial">
  <blockquote class="testimonial__quote">
    {quote}
  </blockquote>

  <p class="testimonial__attribution">
    — {attribution}
  </p>
</div>

<style>
.testimonial {
  position: relative;
  padding: 2rem;
}

.testimonial__quote {
  font-size: 1.25rem;
  font-style: italic;
  margin: 0;
}

.testimonial__attribution {
  margin-top: 1rem;
  font-weight: bold;
  text-align: right;
}

.testimonial {
  position: relative;
}

.testimonial::before {
  content: "“";
  position: absolute;
  top: -3rem;
  left: 0;
  font-size: 10rem;
  color: #bbcae4;
  font-family: Merriweather;
  line-height: 1;
}

</style>

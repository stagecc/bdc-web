---
interface Props {
  name: string;
  label?: string;
  size?: 3 | 4 | 5 | 6 | 7 | 8 | 9;
  class?: string;
}

const { name, label, size, class: className = '' } = Astro.props;

const isDecorative = !label;

const sizeClass = size ? `usa-icon--size-${size}` : '';
---

<svg
  class={`usa-icon ${sizeClass} ${className}`}
  aria-hidden={isDecorative ? 'true' : undefined}
  role={isDecorative ? undefined : 'img'}
  focusable="false"
>
  {label && <title>{label}</title>}
  <use href={`/img/sprite.svg#${name}`} />
</svg>
